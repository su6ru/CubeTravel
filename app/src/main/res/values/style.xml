<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBottomTabStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_select_main_tab</item>
        <item name="android:textSize">@dimen/dimens_very_very_small</item>
        <item name="android:drawableTint">@color/color_select_main_tab</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 收藏按鈕 Style -->
    <style name="CollectionCheckboxStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_select_collection</item>
        <item name="android:drawableStart">@drawable/ic_select_favorite</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>
    <!-- 景點listview 內文 Style -->
    <style name="ItemAttractionsTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/dimens_very_very_very_small</item>
    </style>
    <!-- 前往網頁Style -->
    <style name="GoToWebTextStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/dimens_very_very_small</item>

    </style>

    <!-- 景點詳細內頁 標題Style -->
    <style name="AttractionsContentTitleTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_small</item>
    </style>
    <!-- 景點詳細內頁 普通內文Style -->
    <style name="AttractionsContentNormalTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_very_very_very_small</item>
    </style>
    <!-- 景點詳細內頁 開放時間內文Style -->
    <style name="AttractionsContentOpenTimeTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/dimens_very_very_very_small</item>
    </style>

    <!-- 最新消息詳細內頁 標題Style -->
    <style name="NewsContentTitleTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_small</item>
    </style>
    <!-- 最新消息詳細內頁 普通內文Style -->
    <style name="NewsContentNormalTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_very_very_very_small</item>
    </style>


    <!-- 設定文字 Style -->
    <style name="SettingItemTextStyle">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_big</item>

    </style>
    <!-- 語言 Style -->
    <style name="LanguageItemTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dimens_big</item>

    </style>


    <!-- 通用 Toolbar Style -->
    <style name="ToolbarStyle">
        <item name="title_text_color">@color/white</item>
        <item name="android:background">@color/blue_transparent</item>
    </style>
    <!-- Toolbar 開啟網頁 Style -->
    <style name="ToolbarOpenMapStyle">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/dimens_very_small</item>
        <item name="android:textColor">@color/orange_light</item>
        <item name="android:drawableStart">@drawable/ic_map</item>

    </style>

    <!-- 分隔線 -->
    <style name="Line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>